<body>
     
          <div class="container">
               <div class="answer-box">0</div>
               <div class="operating-box grid">
                   <p class="button operator" id="ac">AC</p>
                   <p class="button operator" id="del">DEL</p>
                   <p class="button operator" id="percentage">%</p>
                   <p class="button operator" id="divide">/</p>
                   <p class="number button" id="seven">7</p>
                   <p class="number button" id="eight">8</p>
                   <p class="number button" id="nine">9</p>

                   <p class="button operator" id="multiply">*</p>

                   <p class="number button" id="four">4</p>
                   <p class="number button" id="five">5</p>
                   <p class="number button" id="six">6</p>

                   <p class="button operator" id="subtraction">-</p>

                   <p class="number button" id="one">1</p>
                   <p class="number button" id="two">2</p>
                   <p class="number button" id="three">3</p>

                   <p class="button operator" id="addition">+</p>

                   <p class="number button" id="zeros">00</p>
                   <p class="number button" id="0">0</p>
                   <p class="number button" id="dot">.</p>

                   <p class="button operator" id="equalto">=</p>
                   
