          </div>
     
     <script>
          let answerBox=document.querySelector(".answer-box");
          let answer=document.querySelector(".answer-box").textContent;
          let number=document.querySelectorAll(".number");
          let operator=document.querySelectorAll(".operator");

          // function for numbers 
         
          function shownum(id){
               const textinsideid=document.getElementById(id).textContent;
               // answer=answer*10+parseFloat(textinsideid);
               if(answer==0){
                    answer=textinsideid;
                    answerBox.textContent=answer;
               } 
                    else{       
               answer=`${answer}${textinsideid}`
               answerBox.textContent=answer;
                    }
          }

          // function for working of operator 
          function showoperator(id){
               const textinsideid=document.getElementById(id).textContent;
                    if(textinsideid=='='){
                         let output=eval(answer);
                         output=parseFloat(output.toFixed(4))
                         answer=output;
                         answerBox.textContent=answer;
                         answer=output.toString();

                    } else if (textinsideid=='AC'){
                         answer=0;
                         answerBox.textContent=answer;
                    } else if(textinsideid=='DEL'){
                          answer=answer.slice(0,-1);
                         answerBox.textContent=answer;
                    }
                     else{
                         const lastindex=answer[answer.length-1];
                         if(lastindex=='+'||lastindex=='-'||lastindex=='*'||lastindex=='/'||lastindex=='%'){
                              answer=answer.slice(0,-1);
                         }

                         answer=`${answer}${textinsideid}`;
                         answerBox.textContent=answer;   
                    }
          }

          // loop in number  click property...>>>

          number.forEach(element => {
               element.addEventListener('click',function(){
                    shownum(this.id);
               })
          });

          // loop in operator 
          operator.forEach(element =>{
               element.addEventListener('click',function(){
                    showoperator(this.id);
               })
          })



           
     </script>
